.card
    .card-body
        %p= link_to "View", ticket
        %h3= number_to_currency(ticket.price, {unit: "GHS"})
        %p.lead= ticket.departure_date.strftime('Departure date: %m/%d/%Y')
        %p.lead= ticket.departure_time.strftime('Departure time: %I:%M%p')
        %p.lead= "Bus Number: #{ticket.bus.number}"
        %p.lead= "Seat number: #{ticket.seat.name}"
